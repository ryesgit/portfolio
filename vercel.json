{
  "name": "portfolio-blog",
  "buildCommand": "npm run build:blog",
  "outputDirectory": "dist-blog",
  "installCommand": "pnpm install",
  "devCommand": "npm run dev:blog",
  "framework": null,
  "rewrites": [
    {
      "source": "/post/:slug",
      "destination": "/api/post/:slug",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": ".*(bot|crawl|slurp|spider|facebook|twitter|linkedin|whatsapp).*"
        }
      ]
    },
    {
      "source": "/post/:slug",
      "destination": "/blog.html"
    },
    {
      "source": "/admin(.*)",
      "destination": "/blog.html"
    },
    {
      "source": "/(.*)",
      "destination": "/blog.html"
    }
  ]
}